<%= form_for @renter,remote: true, :html => {:class => 'form-horizontal'}  do |f| %>
  
  <% if @renter.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@renter.errors.count, "error") %> prohibited this renter from being saved:</p>
      <ul>
      <% @renter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :postcode, :class => 'control-label'%>
    <div class="controls">
    	<%= f.text_field :postcode, :class => 'text_field', :placeholder=>"Postcode"%>
    </div>
  </div>
  
   <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
    	<%= f.text_field :email, :class => 'text_field', :placeholder=>"Email" %>
    </div>
  </div> 
  
   <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
  
<% end %>
